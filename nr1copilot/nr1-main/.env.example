# Viral Clip Generator - Environment Configuration

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/viral_clips
DATABASE_NAME=viral_clips

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379/0

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name

# External API Keys
YOUTUBE_API_KEY=your-youtube-api-key
OPENAI_API_KEY=your-openai-api-key

# Security Settings
CORS_ORIGINS=*
ALLOWED_HOSTS=*

# File Upload Limits
MAX_FILE_SIZE=524288000  # 500MB in bytes
UPLOAD_PATH=uploads
VIDEO_PATH=videos

# Video Processing Settings
MAX_VIDEO_DURATION=3600  # 1 hour in seconds
VIDEO_QUALITY=720p
OUTPUT_FORMATS=mp4,webm

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
ENABLE_METRICS=true

# Development Settings (set to false in production)
RELOAD=false
ACCESS_LOG=true

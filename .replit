run = "npm run dev"
[nix]
channel = "stable-24_05"
packages = ["ffmpeg-full", "libxcrypt", "postgresql"]

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "FastAPI Server"

[[workflows.workflow]]
name = "FastAPI Server"
author = 43354655
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd nr1copilot/nr1-main && python3 -m pip install -r requirements.txt && python3 -m uvicorn app.main:app --host 0.0.0.0 --port 5000 --reload"
